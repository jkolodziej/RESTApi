<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <security-role>
        <role-name>RENTER</role-name>
    </security-role>
    <security-role>
        <role-name>ADMIN</role-name>
    </security-role>
    <security-role>
        <role-name>RESOURCEADMIN</role-name>
    </security-role>
    
    <security-constraint>
        <display-name>RenterResources</display-name>
        <web-resource-collection>
            <web-resource-name>RenterResources</web-resource-name>
            <url-pattern>/resources/rents/self</url-pattern>
            <url-pattern>/resources/elements/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>RenterResources</web-resource-name>
            <url-pattern>/resources/rents/*</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>RENTER</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>AdminResources</display-name>
        <web-resource-collection>
            <web-resource-name>AdminResourcesRW</web-resource-name>
            <url-pattern>/resources/users/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>AdminResourcesR</web-resource-name>
            <url-pattern>/resources/rents/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>ResourceAdminResources</display-name>
         <web-resource-collection>
            <web-resource-name>ResourceAdminResourcesRW</web-resource-name>
            <url-pattern>/resources/elements/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>ResourceAdminResourcesR</web-resource-name>
            <url-pattern>/resources/rents/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>RESOURCEADMIN</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>AuthenticatedUserResources</display-name>
        <web-resource-collection>
            <web-resource-name>AuthenticatedUserResources</web-resource-name>
            <url-pattern>/resources/users/self</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>RENTER</role-name>
            <role-name>ADMIN</role-name>
            <role-name>RESOURCEADMIN</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>PublicResources</display-name>
        <web-resource-collection>
            <web-resource-name>PublicResources</web-resource-name>
            <url-pattern>/resources/authenticate</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
</web-app>
